<div style="margin-top: 3vh; padding-left: 20px; padding-right: 20px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% @applicant = Applicant.find(params[:id]) %>
    <%= f.hidden_field :name, value: @applicant.name %>
    <%= f.hidden_field :number, value: @applicant.number %>
    <%= f.hidden_field :email, value: @applicant.email %>
    <%= f.hidden_field :password, value: @applicant.password %>
    <%= f.text_field :confirmation_code, style: "margin:0; padding: 10px; width: 100%; height: 40px; color: black; background-color: #2FAFAE; outline:none; border:none; font-family: 'Roboto', sans-serif; font-size: 18px; letter-spacing: 2px;", placeholder: "Confirmation Code" %>
    <%= link_to "Cancel", root_path, :class => 'login-link', style: "font-family: 'Roboto', sans-serif; font-size: 18px; font-weight: 300;letter-spacing: 1px; color:#D3D3D3;" %>&nbsp;&nbsp;&nbsp;
    <%= f.submit "Submit", style: "margin-top: 25px; font-family: 'Roboto', sans-serif; font-size: 18px; font-weight: 300;letter-spacing: 1px; color:#D3D3D3; border:none; background: none;" %>
  <% end %>
</div>

<style>
::-webkit-input-placeholder { /* WebKit, Blink, Edge */
  color: white;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: white;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: white;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: white;
}
.login-link:hover{
  text-decoration: none;
}
</style>


