<div style="margin-top: 3vh; padding-left: 20px; padding-right: 20px;">
  <%= form_for @applicant, url: {action: "create"} do |f| %>
    <%= f.text_field :name, style: "margin: 0; padding: 10px; width: 100%; height: 40px; color: black; background-color: #2FAFAE; outline:none; border:none; font-family: 'Roboto', sans-serif; font-size: 18px; letter-spacing: 2px;", placeholder: "Name" %>
    <%= f.text_field :number, style: "margin-top: 15px; padding: 10px; width: 100%; height: 40px; color: black; background-color: #2FAFAE; outline:none; border:none; font-family: 'Roboto', sans-serif; font-size: 18px; letter-spacing: 2px;", placeholder: "Mobile Number" %>
    <%= f.text_field :email, style: "margin-top: 15px; padding: 10px; width: 100%; height: 40px; color: black; background-color: #2FAFAE; outline:none; border:none; font-family: 'Roboto', sans-serif; font-size: 18px; letter-spacing: 2px;", placeholder: "Email Address" %>
    <%= f.password_field :password, autocomplete: "off", style: "margin-top: 15px; padding: 10px; width: 100%; height: 40px; color: black; background-color: #2FAFAE; outline:none; border:none; font-family: 'Roboto', sans-serif; font-size: 18px; letter-spacing: 2px;", placeholder: "Password" %>
    <%= link_to "Back", root_path, :class => 'login-link', style: "font-family: 'Roboto', sans-serif; font-size: 18px; font-weight: 300;letter-spacing: 1px; color:#D3D3D3;" %>&nbsp;&nbsp;&nbsp;
    <%= f.submit "Register", style: "margin-top: 25px; font-family: 'Roboto', sans-serif; font-size: 18px; font-weight: 300;letter-spacing: 1px; color:#D3D3D3; border:none; background: none;" %>
  <% end %>
</div>

<style>
::-webkit-input-placeholder { /* WebKit, Blink, Edge */
  color: white;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: white;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: white;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: white;
}
.login-link:hover{
  text-decoration: none;
}
</style>


